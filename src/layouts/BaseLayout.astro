---
import "../styles/global.css";
const { title = "Club" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="font-sans bg-oxgray text-gray-900 selection:bg-oxblue/20">
    <header class="sticky top-0 z-50 bg-white/80 backdrop-blur shadow-sm border-b border-gray-200">
      <div class="max-w-5xl mx-auto flex flex-col sm:flex-row items-center justify-between p-4">
        <div class="flex items-center gap-3">
          <img src={`${import.meta.env.BASE_URL}images/logo.avif`} alt="Club logo" class="w-16 h-auto" />
          <h1 class="text-xl font-bold text-oxblue">Oxford & Cambridge Society of Austria</h1>
        </div>
        <slot name="nav" />
      </div>
    </header>

    <main class="max-w-3xl mx-auto px-4 py-10 space-y-16">
      <slot />
    </main>

    <footer class="text-center text-sm text-gray-500 py-8 border-t border-gray-200">
      Â© {new Date().getFullYear()} Oxford & Cambridge Society of Austria
    </footer>
  </body>
</html>
